{% extends 'base.html.twig' %}

{% block title %}Panel de AdministraciÃ³n{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">ðŸ“Š Panel de AdministraciÃ³n</h1>

    {% include 'components/_flashes.html.twig' ignore missing %}

    <div class="row g-4">
        <!-- Usuarios pendientes -->
        <div class="col-md-3">
            <div class="card text-bg-warning shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Usuarios pendientes</h5>
                    <p class="display-6">{{ usuarios_pendientes|length }}</p>
                    <a href="{{ path('admin_usuarios') }}" class="btn btn-light btn-sm">Gestionar</a>
                </div>
            </div>
        </div>

        <!-- Reservas pendientes -->
        <div class="col-md-3">
            <div class="card text-bg-secondary shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Reservas pendientes</h5>
                    <p class="display-6">{{ reservas_pendientes|length }}</p>
                    <a href="{{ path('admin_reservas') }}" class="btn btn-light btn-sm">Ver</a>
                </div>
            </div>
        </div>

        <!-- Reservas activas -->
        <div class="col-md-3">
            <div class="card text-bg-primary shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Reservas activas</h5>
                    <p class="display-6">{{ reservas_activas|length }}</p>
                    <a href="{{ path('admin_reservas_activas') }}" class="btn btn-light btn-sm">Ver</a>
                </div>
            </div>
        </div>

        <!-- Libros sin devolver -->
        <div class="col-md-3">
            <div class="card text-bg-danger shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Libros sin devolver</h5>
                    <p class="display-6">{{ libros_sin_devolver|length }}</p>
                    <a href="{{ path('admin_libros_sin_devolver') }}" class="btn btn-light btn-sm">Ver</a>
                </div>
            </div>
        </div>

        <!-- Reservas rechazadas -->
        <div class="col-md-3">
            <div class="card text-bg-dark shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Reservas rechazadas</h5>
                    <p class="display-6">{{ reservas_rechazadas|length }}</p>
                    <a href="{{ path('admin_reservas_rechazadas') }}" class="btn btn-light btn-sm">Ver</a>
                </div>
            </div>
        </div>

        <!-- Clientes deudores -->
        <div class="col-md-3">
            <div class="card text-bg-info shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Clientes deudores</h5>
                    <p class="display-6">{{ clientes_deudores|length }}</p>
                    <a href="{{ path('admin_clientes_deudores') }}" class="btn btn-light btn-sm">Ver</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Ãšltimas reservas -->
    <div class="mt-5">
        <h3>ðŸ“Œ Ãšltimas reservas</h3>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Libro</th>
                    <th>Socio</th>
                    <th>Fecha inicio</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                {% for reserva in ultimas_reservas %}
                    <tr>
                        <td>{{ reserva.libro.titulo }}</td>
                        <td>{{ reserva.socio.nombre }} {{ reserva.socio.apellido }}</td>
                        <td>{{ reserva.fechaInicio|date('d/m/Y') }}</td>
                        <td>
                            {% if reserva.estado == 'Pendiente' %}
                                <span class="badge bg-secondary">Pendiente</span>
                            {% elseif reserva.estado == 'Activa' %}
                                <span class="badge bg-primary">Activa</span>
                            {% elseif reserva.estado == 'Rechazada' %}
                                <span class="badge bg-danger">Rechazada</span>
                            {% elseif reserva.estado == 'Finalizada' %}
                                <span class="badge bg-success">Finalizada</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    {% include 'components/_table_empty.html.twig' with { colspan: 4, message: 'No hay reservas recientes.' } %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
