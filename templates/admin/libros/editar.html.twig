{% extends 'base.html.twig' %}

{% block title %}Editar {{ libro.titulo }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <a href="{{ path('admin_libros') }}" class="btn btn-link">⬅ Volver al listado</a>

    <div class="card shadow-sm p-4">
        <div class="row">
            <div class="col-md-4">
                <img src="/uploads/libros/{{ libro.imagen }}" alt="{{ libro.titulo }}" class="img-fluid rounded">
            </div>
            <div class="col-md-8">
                <h2>{{ libro.titulo }}</h2>
                <p><strong>Autor:</strong> {{ libro.autor }}</p>
                <p><strong>Género:</strong> {{ libro.genero }}</p>
                <p><strong>Descripción:</strong> {{ libro.descripcion }}</p>
                <p><strong>Estado:</strong>
                    {% if libro.estado.value == 'Disponible' %}
                        <span class="badge bg-success">Disponible</span>
                    {% else %}
                        <span class="badge bg-danger">Prestado</span>
                    {% endif %}
                </p>

                <a href="{{ path('admin_libro_cambiar_estado', {id: libro.id}) }}" class="btn btn-warning">
                    Cambiar estado
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
