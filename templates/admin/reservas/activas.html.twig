{% extends 'base.html.twig' %}

{% block title %}Reservas activas{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>ðŸ“– Reservas activas</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Libro</th>
                <th>Socio</th>
                <th>Fecha inicio</th>
                <th>Fecha fin</th>
                <th>Acciones</th> {# ðŸ‘ˆ nueva columna #}
            </tr>
        </thead>
        <tbody>
            {% set hayActivas = false %}
            {% for reserva in reservas %}
                {% if reserva.estado.value == 'Activa' %}
                    {% set hayActivas = true %}
                    <tr>
                        <td>{{ reserva.libro.titulo }}</td>
                        <td>{{ reserva.socio.nombre }} {{ reserva.socio.apellido }}</td>
                        <td>{{ reserva.fechaInicio|date('d/m/Y') }}</td>
                        <td>{{ reserva.fechaFin|date('d/m/Y') }}</td>
                        <td>
                            <a href="{{ path('admin_reserva_finalizar', {id: reserva.id}) }}"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Â¿Seguro que quieres finalizar esta reserva?');">
                                Finalizar
                            </a>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}

            {% if not hayActivas %}
                {% include 'components/_table_empty.html.twig' with { colspan: 5, message: 'No hay reservas activas.' } %}
            {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
