{% extends 'base.html.twig' %}

{% block title %}Libros sin devolver{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2>⏰ Libros sin devolver</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Libro</th>
                <th>Socio</th>
                <th>Fecha fin</th>
                <th>Días de atraso</th>
            </tr>
        </thead>
        <tbody>
            {% for reserva in reservas %}
                <tr class="table-danger">
                    <td>{{ reserva.libro.titulo }}</td>
                    <td>{{ reserva.socio.nombre }} {{ reserva.socio.apellido }}</td>
                    <td>{{ reserva.fechaFin|date('d/m/Y') }}</td>
                    <td>{{ (date().diff(reserva.fechaFin)).days }}</td>
                </tr>
            {% else %}
                {% include 'components/_table_empty.html.twig' with { colspan: 4, message: 'No hay libros vencidos sin devolver.' } %}
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
