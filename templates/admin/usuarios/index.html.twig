{% extends 'base.html.twig' %}

{% block title %}Administrar Usuarios{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center mb-3">ðŸ‘¥ AdministraciÃ³n de Usuarios</h2>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('info') %}
        <div class="alert alert-info">{{ message }}</div>
    {% endfor %}

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.id }}</td>
                <td>{{ usuario.nombre }} {{ usuario.apellido }}</td>
                <td>{{ usuario.email }}</td>
                <td>
                    {% if usuario.estado %}
                        <span class="badge bg-success">Verificado</span>
                    {% else %}
                        <span class="badge bg-warning text-dark">Pendiente</span>
                    {% endif %}
                </td>
                <td>
                    {% if not usuario.estado %}
                        <a href="{{ path('admin_usuarios_verificar', {id: usuario.id}) }}" class="btn btn-success btn-sm">âœ” Verificar</a>
                    {% else %}
                        <a href="{{ path('admin_usuarios_rechazar', {id: usuario.id}) }}" class="btn btn-danger btn-sm">âœ– Rechazar</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No hay usuarios registrados.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
