<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Biblioteca{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    {# Bloque opcional para estilos extra #}
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- 游댳 Barra de navegaci칩n -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('homepage') }}">游닄 Biblioteca</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('libro_catalogo') }}">Cat치logo</a>
                    </li>

                    {% if is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('mi_perfil') }}">Mi Perfil</a>
                        </li>
                    {% endif %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_dashboard') }}">Panel Admin</a>
                        </li>
                    {% endif %}
                </ul>

                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-item">
                            <span class="navbar-text me-2">游녻 {{ app.user.username }}</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Cerrar sesi칩n</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Iniciar sesi칩n</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('usuario_registro') }}">Registrarse</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>

    <!-- 游댳 Contenido din치mico -->
    <main class="container mt-4">
        {% include 'components/_flashes.html.twig' %}
        {% block body %}{% endblock %}
    </main>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {# Bloque opcional para scripts extra #}
    {% block javascripts %}{% endblock %}
</body>
</html>
