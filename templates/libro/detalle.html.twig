
{% extends 'base.html.twig' %}


{% block title %}Detalle del Libro{% endblock %}


{% block body %}
<div class="card" style="max-width:600px;margin:auto;text-align:center;">
<img src="{{ asset(libro.imagen) }}" alt="{{ libro.titulo }}" style="max-width:100%;height:300px;object-fit:cover;border-radius:5px;">
<h2>{{ libro.titulo }}</h2>
<p><strong>Autor:</strong> {{ libro.autor }}</p>
<p><strong>Género:</strong> {{ libro.genero }}</p>
<p>{{ libro.descripcion }}</p>
<p><strong>Estado:</strong> {{ libro.estado }}</p>


{% if app.user %}
<form action="#" method="post" style="margin-top:15px;">
<input type="hidden" name="idLibro" value="{{ libro.id }}">
<button type="submit" class="btn btn-green">Reservar</button>
</form>
{% else %}
<p><a href="{{ path('app_login') }}">Iniciá sesión</a> para reservar este libro.</p>
{% endif %}


<div style="margin-top:20px;">
<a href="{{ path('libro_listar') }}" class="btn btn-dark">← Volver al listado</a>
</div>
</div>
{% endblock %}