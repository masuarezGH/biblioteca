{% extends 'base.html.twig' %}


{% block title %}Catálogo de Libros{% endblock %}


{% block body %}
<h1>Catálogo de Libros</h1>
<div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(220px,1fr));gap:20px;">
{% for libro in libros %}
<div class="card" style="text-align:center;">
<img src="{{ asset(libro.imagen) }}" alt="{{ libro.titulo }}" style="max-width:100%;height:200px;object-fit:cover;border-radius:5px;">
<h3>{{ libro.titulo }}</h3>
<p><em>{{ libro.autor }}</em></p>
<a href="{{ path('libro_detalle', {id: libro.id}) }}" class="btn btn-dark">Ver Detalle</a>
</div>
{% else %}
<p>No hay libros disponibles.</p>
{% endfor %}
</div>
{% endblock %}