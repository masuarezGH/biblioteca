{% extends 'base.html.twig' %}


{% block title %}Iniciar Sesión{% endblock %}


{% block body %}
<div class="card" style="max-width:400px;margin:auto;">
<h2 style="text-align:center;">Iniciar Sesión</h2>


{% if error %}
<div style="color:#c00;font-weight:bold;margin-bottom:10px;">
{{ error.messageKey|trans(error.messageData, 'security') }}
</div>
{% endif %}


<form action="{{ path('app_login') }}" method="post">
<div style="margin-bottom:10px;">
<label for="username">Email</label><br>
<input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus style="width:95%;padding:8px;">
</div>


<div style="margin-bottom:10px;">
<label for="password">Contraseña</label><br>
<input type="password" id="password" name="_password" required style="width:95%;padding:8px;">
</div>


<button type="submit" class="btn btn-dark" style="width:100%;">Ingresar</button>
</form>


<p style="margin-top:15px;text-align:center;">
¿No tenés cuenta? <a href="{{ path( 'usuario_registro' ) }}">Registrate aquí</a>

</p>
</div>
{% endblock %}